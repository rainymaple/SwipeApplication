<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.jgli.swipeapplication.CourseActionsActivity">

    <TextView
        android:text="Click the button to continue with course:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="18dp" />
    <TextView
        android:id="@+id/action_label"
        android:text="course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="30dp"
        android:textIsSelectable="false" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button"
        android:layout_toEndOf="@+id/textView"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/action_label"
        android:layout_alignLeft="@+id/action_topCard"
        android:layout_alignStart="@+id/action_topCard"
        android:layout_alignRight="@+id/action_topCard"
        android:layout_alignEnd="@+id/action_topCard" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/action_topCard"
        android:src="@drawable/angularjs"
        android:contentDescription="@string/top_card"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />
</RelativeLayout>
